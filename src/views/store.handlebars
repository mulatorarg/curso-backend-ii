<h1>{{ titulo }}</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-2">
  {{#each productos}}
  <div class="col">
    <div class="card shadow-sm">
      <img src="../img/productos/{{ thumbnails.[0] }}" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text">{{ name }}</p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a href="/product/{{ _id }}" class="btn btn-sm btn-info">Ver</a>
            <a href="/purchase/{{ _id }}" class="btn btn-sm btn-success">Comprar</a>
          </div>
          <small class="text-body-secondary">$ {{ price }}</small>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
