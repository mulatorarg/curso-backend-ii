<div class="d-flex justify-content-center">
  <div class="d-flex flex-column justify-content-center w-50">

    <h1>Registrate</h1>

    <form action="/api/sessions/register" method="POST" class="was-validated">

      <div class="form-group">
        <label for="first_name">Tu Nombres</label>
        <input type="text" class="form-control form-control-sm" name="first_name" placeholder="nombres" required autofocus />
      </div>

      <div class="form-group mt-3">
        <label for="last_name">Tu Apellidos</label>
        <input type="text" class="form-control form-control-sm" name="last_name" placeholder="apellidos" required />
      </div>

      <div class="form-group mt-3">
        <label for="age">Tu Edad</label>
        <input type="numeric" class="form-control form-control-sm" name="age" placeholder="edad" required />
      </div>

      <div class="form-group mt-3">
        <label for="email">Tu Correo Electrónico</label>
        <input type="text" class="form-control form-control-sm" name="email" placeholder="email" required />
      </div>

      <div class="form-group mt-3">
        <label for="password">Tu contraseña</label>
        <input type="password" class="form-control form-control-sm" name="password" placeholder="contraseña" required />
      </div>

      <button type="submit" class="btn btn-success btn-sm mt-3">Registrarme</button>

    </form>

  </div>
</div>
