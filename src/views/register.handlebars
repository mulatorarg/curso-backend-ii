<div class="d-flex justify-content-center">
  <div class="d-flex flex-column justify-content-center w-50">

    <h1>Registrate</h1>

    <form action="/api/sessions/register" method="POST" class="was-validated">

      <div class="form-group">
        <label for="">Tu nombre de usuario</label>
        <input type="text" class="form-control form-control-sm" name="usuario" placeholder="Usuario" required>
      </div>

      <div class="form-group mt-3">
        <label for="">Tu contraseña</label>
        <input type="password" class="form-control form-control-sm" name="password" placeholder="Contraseña" required>
      </div>

      <button type="submit" class="btn btn-success btn-sm mt-3"> Ingresar </button>

    </form>

  </div>
</div>
