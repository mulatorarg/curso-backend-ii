<h1>Hola, {{user.usuario}}.</h1>

<div class="container mt-5 mb-5">
  <h4>Datos de usuario:</h4>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><b>📧 Email:</b> <span id="user-email">{{user.email}}</span></li>
    <li class="list-group-item"><b>🏷️ Rol:</b> <span id="user-role">{{user.role}}</span></li>
  </ul>
</div>

<form action="/api/sessions/logout" method="POST">
  <button class="btn btn-success btn-sm" type="submit">Cerrar Sesión</button>
</form>
